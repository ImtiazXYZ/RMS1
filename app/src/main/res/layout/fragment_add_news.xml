<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/shape1"
        android:elevation="10dp"
        android:orientation="vertical"
        android:transitionName="element">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white_1"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/anik2"
                        android:elevation="20dp">

                        <Spinner
                            android:id="@+id/news_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/anik2"
                        android:elevation="20dp">

                        <Spinner
                            android:id="@+id/news_sub_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="News Title"
                        android:textColorHint="@color/black_1"
                        app:boxStrokeColor="@color/black"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/black_1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/news_title_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/black_1"
                            android:textColorHint="@color/black_1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="News"
                        android:textColorHint="@color/black_1"
                        app:boxStrokeColor="@color/black_1"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/black">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/news_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sub news"
                        android:textColorHint="@color/black"
                        android:transitionName="tran2"
                        app:boxStrokeColor="@color/black"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sub_news_edit_text"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reporter name"
                        android:textColorHint="@color/black_1"
                        app:boxStrokeColor="@color/black"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/black_1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reporter_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/black_1"
                            android:textColorHint="@color/black_1" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reporter email"
                        android:textColorHint="@color/black_1"
                        app:boxStrokeColor="@color/black"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/black_1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reporter_email_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/black_1"
                            android:textColorHint="@color/black_1" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingStart="10dp"
                            android:text="News image:"
                            android:textColor="@color/black_1"
                            android:textSize="14sp" />
                        <ImageView
                            android:id="@+id/news_image_view"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/news_image_text_view"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:padding="16dp"
                            android:textColor="@color/white"
                            android:background="@color/black_1"
                            android:layout_height="wrap_content"
                            android:text="Select photo"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingStart="10dp"
                            android:text="SubNews image:"
                            android:textColor="@color/black_1"
                            android:textSize="14sp" />
                        <ImageView
                            android:id="@+id/sub_news_image_view"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/sub_news_image_text_view"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:padding="16dp"
                            android:textColor="@color/white"
                            android:background="@color/black_1"
                            android:layout_height="wrap_content"
                            android:text="Select photo"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/go"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/black_1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="GO"
                        android:textColor="@color/white_1"
                        android:transitionName="tran4" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
